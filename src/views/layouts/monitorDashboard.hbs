  <style>
    table {
      width: 80%;
      margin: 50px;
      table-layout: fixed;
      border-collapse:
        collapse;
    }

    th,
    td {
      padding: 15px;
      text-align: left;
      font-size: 16px;
    }

    th {
      background-color: #2e5a92;
      color: #fff;
    }

    table,
    th,
    td {
      width: 1fr;
      text-align: center;
    }

    table tbody tr {
      background-color: white;
    }

    table tbody tr:nth-child(odd) {
      background-color: #f2f2f2;
    }

    table thead th {
      border: none;
    }

    .grade-input {
      width: 80px;
      padding: 5px;
      font-size: 16px;
    }

    .download-btn {
      background-color: #2e5a92;
      color: white;
      border: 1px solid white;
      border-radius: 4px;
      cursor: pointer;
    }

    .download-btn:hover {
      background-color: white;
      color: #2e5a92;
    }

    .add-button {
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-left:
        100px;
      /* Add margin-left for space from the left */
    }
  </style>
  <link rel="stylesheet" href="/css/userAvatar.css" />

